<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
			prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #ffffff;"
			stylesheets="@../styles/panel.css" xmlns="http://javafx.com/javafx/17.0.12"
			fx:controller="dev.quinnlane.cloudy.frontend.controllers.MainView">
	<HBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
		  AnchorPane.topAnchor="0.0">
      <children>
		  <VBox maxWidth="-Infinity" HBox.hgrow="ALWAYS">
            <children>
                     <Label text="Cloudy">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Label>
				<Label text="Weather"/>
				<VBox maxWidth="0.0" VBox.vgrow="ALWAYS"/>
				<Pane style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #ffa19d;">
					<children>
						<HBox alignment="CENTER" spacing="5.0">
							<children>
								<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../images/pin.png"/>
									</image>
								</ImageView>
								<Label text="Weather in"/>
								<Label text="Boston, MA">
									<font>
										<Font name="System Bold" size="12.0"/>
									</font>
								</Label>
							</children>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
							</padding>
						</HBox>
					</children>
				</Pane>
			</children>
		  </VBox>
		  <VBox prefHeight="200.0" prefWidth="200.0" styleClass="bento" stylesheets="@../styles/panel.css"
				HBox.hgrow="ALWAYS">
			  <padding>
				  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
			  </padding>
			  <children>
				  <HBox spacing="10.0" styleClass="bbox" VBox.vgrow="ALWAYS">
					  <children>
						  <VBox spacing="10.0" styleClass="bbox" HBox.hgrow="ALWAYS">
							  <children>
								  <VBox spacing="10.0" VBox.vgrow="ALWAYS">
									  <children>
										  <HBox spacing="10.0">
											  <children>
												  <fx:include fx:id="temperaturePanel"
															  source="../components/TemperaturePanel.fxml"
															  HBox.hgrow="ALWAYS"/>

												  <fx:include fx:id="airQualityPanel"
															  source="../components/AirQualityPanel.fxml"
															  HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
												  <fx:include fx:id="windPanel" source="../components/WindPanel.fxml"/>
											  </children>
										  </HBox>
										  <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
											  <children>

												  <fx:include fx:id="overTimePanel"
															  source="../components/OverTimePanel.fxml"
															  HBox.hgrow="ALWAYS"/>
											  </children>
										  </HBox>
									  </children>
								  </VBox>
								  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS"/>
							  </children>
						  </VBox>
						  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
							  <children>
								  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS"/>
								  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS">
									  <children>
										  <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
											  <children>
												  <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
													  <children>

														  <fx:include fx:id="sunsetPanel"
																	  source="../components/SunsetPill.fxml"/>
													  </children>
												  </VBox>
												  <VBox prefHeight="200.0" prefWidth="100.0">
													  <children>
														  <fx:include fx:id="humididtyPanel"
																	  source="../components/HumidityPill.fxml"
																	  VBox.vgrow="ALWAYS"/>
													  </children>
												  </VBox>
											  </children>
										  </HBox>
										  <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
											  <children>
												  <fx:include fx:id="weeklyPanel"
															  source="../components/OverTimePanel.fxml"
															  HBox.hgrow="ALWAYS"/>
											  </children>
										  </HBox>
									  </children>
								  </VBox>
							  </children>
						  </VBox>
					  </children>
				  </HBox>
			  </children>
		  </VBox>
	  </children>
	</HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
